<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/ocr_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ocr_rear_camera"
        app:layout_constraintBottom_toTopOf="@+id/ocr_tv"
        app:layout_constraintEnd_toStartOf="@+id/ocr_btn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ocr_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ocr_front_camera"
        app:layout_constraintBottom_toTopOf="@+id/ocr_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ocr_btn1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ocr_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ocr_btn1" />
</android.support.constraint.ConstraintLayout>